<% layout("layouts/boilerplate.ejs") %>

<body>
  <div class="container mt-4">
    <h3 class="mb-4">All Listings</h3>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
      <% for (let listing of allListings) { %>
        <div class="col">
          <a href="/listings/<%= listing._id %>" class="listing-link text-decoration-none text-dark">
            <div class="card h-100 shadow-sm border-0 listing-card">
              <div class="position-relative">
                <img
                  src="<%= listing.image.url %>"
                  class="card-img-top"
                  alt="listing_image"
                  style="height: 20rem; object-fit: cover; border-radius: 10px 10px 0 0;"
                />
                <!-- Optional overlay (like title text on image) -->
                <div class="card-img-overlay d-flex align-items-end p-2" style="background: linear-gradient(to top, rgba(0,0,0,0.6), transparent);">
                  <h5 class="text-white mb-0"><%= listing.title %></h5>
                </div>
              </div>

              <div class="card-body">
                <p class="card-text mb-0">
                  <b><%= listing.title %></b><br />
                  &#2352;<%= Number(listing.price || 0).toLocaleString("en-NP") %>/night
                </p>
              </div>
            </div>
          </a>
        </div>
      <% } %>
    </div>
  </div>
</body>
