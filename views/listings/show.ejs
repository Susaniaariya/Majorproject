<% layout("layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-2 text-center">
    <h3><%= listing.title %></h3>
  </div>

  <div class="card col-6 offset-3 show-card shadow-lg p-3 rounded-4 listing-card">
    <img
      src="<%= listing.image.url %>"
      class="card-img-top show-img rounded-4"
      alt="listing_image"
    />

    <div class="card-body">
      <!-- OWNER (SAFE) -->
      <p class="card-text">
        Owned by: <%= listing.owner?.username || "Unknown" %></p><img src="<%= listing.image?.url || '/placeholder.jpg' %>" />

      </p>

      <p class="card-text"><%= listing.description %></p>
      <p class="card-text"><strong>रु <%= listing.price %></strong></p>
      <p class="card-text"><%= listing.location %></p>
      <p class="card-text"><%= listing.country %></p>

      <!-- EDIT / DELETE (SAFE) -->
      <% if (currUser && listing.owner && currUser._id.equals(listing.owner._id)) { %>
        <div class="mt-4 d-flex justify-content-between">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark">Edit</a>

          <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
            <button class="btn btn-danger">Delete</button>
          </form>
        </div>
      <% } %>

      <!-- REVIEW FORM -->
      <div class="col-8 offset-2 mb-3 mt-4">
        <hr />
        <% if (currUser) { %>
          <h4>Leave a Review</h4>

          <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate>
            <fieldset class="starability-heartbeat">
              <legend>Rating</legend>

              <input type="radio" name="review[rating]" value="1" /> 1
              <input type="radio" name="review[rating]" value="2" /> 2
              <input type="radio" name="review[rating]" value="3" /> 3
              <input type="radio" name="review[rating]" value="4" /> 4
              <input type="radio" name="review[rating]" value="5" /> 5
            </fieldset>

            <div class="mb-3 mt-3">
              <label class="form-label">Comment</label>
              <textarea name="review[comment]" class="form-control" required></textarea>
            </div>

            <button class="btn btn-outline-dark">Submit</button>
          </form>
        <% } %>
      </div>

      <!-- ALL REVIEWS -->
      <p><b>All Reviews</b></p>
      <div class="row">
        <% for (let review of listing.reviews) { %>
          <div class="card col-5 ms-3 mb-3">
            <div class="card-body">
              <!-- REVIEW AUTHOR (SAFE) -->
              <h5 class="card-title">
                @<%= review.author ? review.author.username : "Deleted User" %>
              </h5>

              <p class="card-text"><%= review.comment %></p>
              <p class="card-text"><%= review.rating %> stars</p>
            </div>

            <!-- REVIEW DELETE (SAFE) -->
            <% if (
              currUser &&
              (
                (review.author && currUser._id.equals(review.author._id)) ||
                (listing.owner && currUser._id.equals(listing.owner._id))
              )
            ) { %>
              <form
                method="POST"
                action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                class="mb-2 ms-2"
              >
                <button class="btn btn-sm btn-dark">Delete</button>
              </form>
            <% } %>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>
